<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/farm"
    android:layout_height="match_parent"
    tools:context=".croprotation.cropRotation">

    <TextView
        android:id="@+id/rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="તમે કયા પ્રકારનો પાક ઉગાડવા માંગો છો ?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/CropRotat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rotation"
        android:layout_marginTop="0.1in"
        android:hint="તમારે જે પાક ઉગાડવો હોય એ જણાવો "
        android:textColorHint="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-2dp" />

    <Button
        android:id="@+id/btnGetCroprotat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/CropRotat"
        android:layout_marginTop="0.1in"
        android:text="Get crop"
        />

    <TextView
        android:id="@+id/displaycroprotat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGetCroprotat"
        android:textSize="30dp"
        android:textColorHint="#000000"
        />

