<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/farm"
    android:layout_height="match_parent"
    tools:context=".crprecom.crop_recomen">

    <TextView
        android:id="@+id/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="પાક માટેની ભલામણ"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Heading"
        android:hint="તમારા ઝોનનું નામ લખો "
        android:textColor="#F3000000"
        android:textColorHint="#000000"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-4dp" />

    <Button
        android:id="@+id/btnGetCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crop"
        android:text="Get crop"
        />

    <TextView
        android:id="@+id/displaycrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGetCrop"
        android:textSize="30dp"
        />

</RelativeLayout>